{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://robbyb480.github.io/rtax/schema/events.schema.json",
  "title": "RTAx Events (JSONL)",
  "description": "Each line in events.jsonl is a single object conforming to this schema.",
  "type": "object",
  "required": ["t", "type"],
  "properties": {
    "t": { "type": "string", "description": "ISO8601 timestamp" },
    "type": { "type": "string", "enum": ["start", "message", "end"] },
    "role": { "type": "string", "enum": ["system", "user", "assistant", "tool"] },
    "content": { "type": "string" },
    "tags": { "type": "array", "items": { "type": "string" } },
    "ok": { "type": "boolean" },
    "suite": { "type": "string" },
    "model": { "type": "string" }
  },
  "additionalProperties": true,
  "examples": [
    { "t": "2025-01-01T00:00:00Z", "type": "start", "suite": "smoke_demo", "model": "model_alias" },
    { "t": "2025-01-01T00:00:02Z", "type": "message", "role": "assistant", "content": "â€¦" },
    { "t": "2025-01-01T00:00:04Z", "type": "end", "ok": true }
  ]
}
